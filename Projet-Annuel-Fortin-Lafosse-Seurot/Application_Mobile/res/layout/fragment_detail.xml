<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.esgi.iam.mpc.DetailActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/labeNomProduit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Nom produit"
        android:background="@drawable/background_txt"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/qteProduit"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_below="@+id/labeNomProduit"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_txt"
        android:inputType="number"
        android:hint="QuantitÃ©" />

    <Spinner
        android:id="@+id/qteSpinner"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_below="@+id/labeNomProduit"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/qteProduit"
        android:background="@drawable/background_txt" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/qteSpinner"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_green"
        android:onClick="onClickBtnSave"
        android:text="Sauvegarder"
        android:textColor="#ffffff"
        android:textSize="13sp" >
    </Button>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/qteSpinner"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_red"
        android:onClick="onClickBtnDelete"
        android:text="Supprimer"
        android:textColor="#ffffff"
        android:textSize="13sp" >
    </Button>

</RelativeLayout>