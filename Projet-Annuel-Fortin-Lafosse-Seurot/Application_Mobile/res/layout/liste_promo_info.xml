<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/background_txt" >

    <TextView
        android:id="@+id/code_promo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:visibility="invisible" />
    
    <TextView
        android:id="@+id/nom_mag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="Magasin"
        android:textColor="#000000"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/desc_promo"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_below="@+id/nom_mag"
        android:gravity="center"
        android:padding="5dp"
        android:text="Description"
        android:textColor="#000000"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/nom_mag"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/date_debut"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:text="date debut"
            android:textColor="#000000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/date_fin"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:padding="2dp"
            android:text="date fin"
            android:textColor="#000000"
            android:textSize="13sp" />
    </LinearLayout>

</RelativeLayout>